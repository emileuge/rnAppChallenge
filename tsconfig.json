// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
  "allowJs": true,
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true,
  "isolatedModules": true,
  "jsx": "react-native",
  "skipLibCheck": true,
  "lib": [
    "ESNext", "ES2021.String"
  ],
  "moduleResolution": "node",
  "noEmit": true,
  "strict": true,
  "target": "esnext",
  "module": "esnext",
  "experimentalDecorators": true,
  "noImplicitAny": true,
  "resolveJsonModule":true,
  },
  "types": [
    "react",
    "react-native",
    "jest"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "android",
    "ios",
    "node_modules"
  ]
}
